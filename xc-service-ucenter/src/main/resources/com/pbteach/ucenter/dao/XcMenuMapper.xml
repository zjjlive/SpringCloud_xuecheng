<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pbteach.ucenter.dao.XcMenuMapper">


    <!--将结果集映射为一对多树型结构-->
   <select id="selectPermissionByUserId" parameterType="java.lang.String"
            resultType="com.pbteach.framework.domain.ucenter.XcMenu">

        SELECT
          *
        FROM
          xc_menu
        WHERE id IN
          (SELECT
            menu_id
          FROM
            xc_permission
          WHERE role_id IN
            (SELECT
              xc_user_role.role_id
            FROM
              xc_user_role
            WHERE user_id = #{userId}))
   </select>

</mapper>